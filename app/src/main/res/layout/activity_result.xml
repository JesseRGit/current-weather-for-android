<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity"
        android:id="@+id/ConstraitLayout_main_result"
        android:background="@color/colorPrimary">
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/ConstraitLayout_inner"
            android:background="@drawable/layout_rounded_corners"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/ConstraintLayout_title">
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_humidity" android:textSize="36sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_windSpeed_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView_humidity_value"/>
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_humidity_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="30sp"
                android:textStyle="bold" android:textAlignment="viewStart" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:textColor="@color/textBlueDarker"
                app:layout_constraintTop_toBottomOf="@+id/textView_humidity"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:id="@+id/textView_temp" android:textSize="36sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAlignment="viewStart" android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView_temp_value"/>
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_condition" android:textSize="36sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_temp_value"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView_condition_value"/>
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_windSpeed" android:textSize="36sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_condition_value"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView_windSpeed_value"/>
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_temp_value"
                android:textSize="30sp"
                android:textAlignment="viewStart"
                android:textColor="@color/textBlueDarker"
                app:layout_constraintTop_toBottomOf="@+id/textView_temp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView_condition"/>
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_condition_value"
                android:textSize="30sp"
                android:textStyle="bold" android:textAlignment="viewStart"
                android:textColor="@color/textBlueDarker"
                app:layout_constraintTop_toBottomOf="@+id/textView_condition"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:textAllCaps="false" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/textView_windSpeed"/>
        <TextView
                android:text="@string/textView_info_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_windSpeed_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="30sp"
                android:textStyle="bold" android:textAlignment="viewStart" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:textColor="@color/textBlueDarker"
                app:layout_constraintTop_toBottomOf="@+id/textView_windSpeed"
                app:layout_constraintBottom_toTopOf="@+id/textView_humidity"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/ConstraintLayout_title"
            android:layout_marginTop="16dp"
            android:background="@drawable/layout_rounded_corners">
        <TextView
                android:text="@string/app_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_title_result"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:textAlignment="center" android:textSize="38sp"
                android:textStyle="bold" android:textAllCaps="false" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp" android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>